<h3>{{viewTitle}}</h3>

<form action="/hotel" method="POST"s>
    <input type="hidden" name="_id" value="{{hotel._id}}">
    <div class="form-group">
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{hotel.name}}">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="location" placeholder="Location" value="{{hotel.location}}">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{hotel.email}}">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{hotel.mobile}}">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="ratings" placeholder="Ratings" value="{{hotel.ratings}}">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="price" placeholder="Price Per Day" value="{{hotel.price}}">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="currency" placeholder="Currency" value="{{hotel.currency}}">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="homePage" placeholder="Home Page" value="{{hotel.homePage}}">
    </div>
    
    
    <div class="form-group">
        <button type="submit" class="btn btn-success"> Submit</button>
        <a class="btn btn-info" href="/hotel/info"></i> View All</a>
        
    </div>
</form>